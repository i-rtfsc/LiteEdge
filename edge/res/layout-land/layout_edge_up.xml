<com.journeyOS.edge.view.EdgeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <View
        android:id="@+id/mask_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mask_up" />

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="@dimen/parent_height"
        android:layout_height="@dimen/parent_width"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layout_groups"
            android:layout_width="@dimen/landscape_item_group_width"
            android:layout_height="@dimen/landscape_item_group_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge_up"
            android:orientation="horizontal"
            android:paddingStart="75px"
            android:paddingEnd="75px">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/svg_add" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shape_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="165px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shape_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="165px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shape_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon4"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shape_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon5"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="@dimen/icon_image_view_size"
                    android:layout_height="@dimen/icon_image_view_size"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shape_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon6"
                    android:layout_width="@dimen/icon_view_size"
                    android:layout_height="@dimen/icon_view_size"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/svg_add" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image6"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/item_text_margin_top"
                    android:text="@string/add"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_statusbar"
            android:layout_width="@dimen/status_bar_width"
            android:layout_height="@dimen/status_bar_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge_statusbar">

            <TextView
                android:id="@+id/statusbar_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/statusTextSize" />

            <TextView
                android:id="@+id/statusbar_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/statusbar_text2"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/statusTextSize" />

            <TextView
                android:id="@+id/statusbar_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/backspace_marginLeft"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@id/statusbar_text2"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/statusTextSize" />

            <TextClock
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusbar_text2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:format24Hour="EE HH:mm"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="@dimen/statusTextSize"
                android:textStyle="bold" />

            <com.iigo.library.PowerView
                android:id="@+id/battery"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:layout_below="@id/statusbar_text2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/clock"
                android:gravity="center" />

        </RelativeLayout>

    </RelativeLayout>

</com.journeyOS.edge.view.EdgeView>
